<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.croatiaquiz.MainActivity">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/paddingleft"
            style="@style/questionnumbers"
            android:text="Info"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/alltext"
            android:padding="@dimen/paddingquestion"
            android:text="@string/info" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/questionnumbers"
            android:paddingLeft="@dimen/paddingleft"
            android:text="Question 1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/paddingquestion"
            android:text="@string/question1"
            style="@style/alltext"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/paddingquestion"
                android:text="Split"
                android:textAppearance="?android:textAppearanceMedium"
                style="@style/alltext"/>

            <RadioButton
                android:id="@+id/Zagreb_RadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/paddingquestion"
                android:text="Zagreb"
                android:textAppearance="?android:textAppearanceMedium"
                style="@style/alltext"/>

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/paddingquestion"
                android:text="Dubrovnik"
                android:textAppearance="?android:textAppearanceMedium"
                android:textSize="16sp"
                android:textColor="#757575"/>

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/paddingquestion"
                android:text="Osijek"
                android:textAppearance="?android:textAppearanceMedium"
                style="@style/alltext"/>
        </RadioGroup>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/questionnumbers"
            android:paddingLeft="@dimen/paddingleft"
            android:text="Question 2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/paddingquestion"
                android:text="Karlovac lays on"
                style="@style/alltext" />

            <EditText
                android:id="@+id/numberOfRiversKarlovac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="2,3,4"
                android:padding="@dimen/paddingquestion"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/paddingquestion"
                android:text="rivers."
                style="@style/alltext" />

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/questionnumbers"
            android:paddingLeft="@dimen/paddingleft"
            android:text="Question 3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/paddingquestion"
            android:text="@string/question3"
            style="@style/alltext"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <CheckBox
            android:id="@+id/Stipe_Mesic_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/paddingquestion"
            android:paddingLeft="24dp"
            android:text="Stipe Mesic"
            style="@style/alltext"/>

        <CheckBox
            android:id="@+id/Franjo_Tudman_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/paddingquestion"
            android:paddingLeft="24dp"
            android:text="Franjo Tudman"
            style="@style/alltext"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/paddingquestion"
            android:paddingLeft="24dp"
            android:text="Davor Suker"
            style="@style/alltext"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/paddingquestion"
            android:paddingLeft="24dp"
            android:text="Luka Modric"
            style="@style/alltext"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/questionnumbers"
            android:paddingLeft="@dimen/paddingleft"
            android:text="Question 4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/paddingquestion"
            android:text="@string/question4"
            style="@style/alltext"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nameOfTheRiver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/paddingquestion"
                android:text="The"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/Sava_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="name (write in caps)"
                android:padding="@dimen/paddingquestion"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/questionnumbers"
            android:paddingLeft="@dimen/paddingleft"
            android:text="Question 5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/paddingquestion"
            android:text="@string/question5"
            style="@style/alltext" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/paddingquestion"
                android:text="Asia"
                android:textAppearance="?android:textAppearanceMedium"
                style="@style/alltext" />

            <RadioButton
                android:id="@+id/Europe_RadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/paddingquestion"
                android:text="Europe"
                android:textAppearance="?android:textAppearanceMedium"
                style="@style/alltext"/>

        </RadioGroup>


        <Button
            android:id="@+id/button_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:onClick="submitQuiz"
            android:padding="8dp"
            android:text="Check answers"
            android:textAllCaps="true" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/totalAnswers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="16dp"
                android:text=""
                android:textAllCaps="true"
                android:textColor="#0094cc"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/Flag_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:layout_below="@+id/totalAnswers"
                android:layout_centerHorizontal="true"
                android:src="@drawable/flag" />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>
